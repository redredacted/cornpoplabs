---
import BaseLayout from "./BaseLayout.astro";

const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
    <p><em class="dark:text-white">{frontmatter.description}</em></p>
    <p class="dark:text-white">Published on: {frontmatter.pubDate.slice(0, 10)}</p>
    
    <p class="dark:text-white">Written by {frontmatter.author}</p>
    
    <img src={frontmatter.image.url} width="300" alt={frontmatter.image.alt} />

    <div>
        {frontmatter.tags.map((tag) => (
            <p class="dark:text-white"><a href={`/tags/${tag}`}>{tag}</a></p>
        ))}
    </div>

    <slot />
</BaseLayout>